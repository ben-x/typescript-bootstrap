{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": [
    "./src/types/**/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/express/index.d.ts",
    "./node_modules/@types/mongoose/index.d.ts"
  ]
}
